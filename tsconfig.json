{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist/",
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noEmitOnError": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "assets": []
}